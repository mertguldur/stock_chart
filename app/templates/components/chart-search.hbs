<div class="row">
  <div class="col-md-4">
    {{input value=value key-up=(action 'handleFilterEntry') class="form-control" placeholder="Enter company name" autofocus="true"}}
    <table class="table table-striped">
      <tbody>
        {{#each companies as |company|}}
          <tr>
            <td>{{company.symbol}}</td>
            <td>{{company.name}}</td>
            <td><button {{action 'handleChartButton' company}} class="btn btn-info">Chart</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="col-md-8">
    <ul>
      {{#each quotes as |quote|}}
        <li>{{quote.date}}: Low {{quote.low}}, High {{quote.high}}, Open {{quote.open}}, Close {{quote.close}}</li>
      {{/each}}
    </ul>
  </div>
</div>
